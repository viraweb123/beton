<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="beton_view_move_line_tree" model="ir.ui.view">
		<field name="name">beton.stock.move.line.tree</field>
		<field name="model">stock.move.line</field>
		<field name="arch" type="xml">
			<tree string="Move Lines" create="0" default_order="date">
				<field name="date" />
				<field name="reference" string="Reference"
					invisible="context.get('no_reference', False)" />
				<field name="product_id" />
				<field name="lot_id" groups="stock.group_production_lot" />
				<field name="location_id" />
				<field name="location_dest_id" />
				<field name="qty_done" string="Quantity Done" />
				<field name="product_uom_id"
					options="{'no_open': True, 'no_create': True}"
					string="Unit of Measure" groups="uom.group_uom" />
				<field name="company_id" groups="base.group_multi_company"
					force_save="1" />
				<field name="state" widget='badge'
					decoration-success="state == 'done'"
					decoration-info="state not in ('done', 'cancel')" />
			</tree>
		</field>
	</record>
</odoo>